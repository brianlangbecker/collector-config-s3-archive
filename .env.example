# Simple OpenTelemetry Collector Demo Configuration
# Copy this file to .env and update with your actual values

# =============================================================================
# REQUIRED: HONEYCOMB CONFIGURATION
# =============================================================================
# Your Honeycomb team API key (get from https://ui.honeycomb.io/account)
HONEYCOMB_API_KEY=your_honeycomb_api_key_here

# =============================================================================
# REQUIRED: AWS S3 CONFIGURATION  
# =============================================================================
# AWS credentials for S3 archival
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_DEFAULT_REGION=us-east-1

# =============================================================================
# OPTIONAL: ADVANCED CONFIGURATION
# =============================================================================
# Environment name for telemetry
ENVIRONMENT=docker-demo

# Collector resource limits
COLLECTOR_MEMORY=512m
COLLECTOR_CPU=0.3

# Collector version
COLLECTOR_VERSION=latest

# Enable debug logging (info/debug)
LOG_LEVEL=info
OTEL_LOG_LEVEL=warn